{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "counter": {
            "metadata": {
                "description": "from the copyindex function of calling template"
            },
            "type": "int"
        },
        "moodleCommon": {
            "metadata": {
                "description": "Common Moodle values"
            },
            "type": "object"
        },
        "vmNameList": {
            "metadata": {
                "description": "list of all names in the Maria DB cluster"
            },
            "type": "string"
        }
    },
    "resources": [
        {
            "apiVersion": "2015-05-01-preview",
            "location": "[resourceGroup().location]",
            "name": "[variables('nicName')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipcfgdb",
                        "properties": {
                            "loadBalancerBackendAddressPools": [
                                {
                                    "id": "[variables('beID')]"
                                }
                            ],
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('subnetDbRef')]"
                            }
                        }
                    }
                ]
            },
            "tags": {
                "displayName": "postgresql VM NIC"
            },
            "type": "Microsoft.Network/networkInterfaces"
        },
        {
            "apiVersion": "[parameters('moodleCommon').computeApi]",
            "copy": {
                "count": "[variables('MariadbTshirt').diskCount]",
                "name": "[variables('diskLoop')]"
            },
            "location": "[resourceGroup().location]",
            "name": "[concat(variables('vmName'),'-datadisk',copyIndex(1))]",
            "properties": {
                "accountType": "Premium_LRS",
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[variables('MariadbTshirt').diskSize]"
            },
            "tags": {
                "displayName": "postgresql VM Data Disk"
            },
            "type": "Microsoft.Compute/disks"
        },
        {
            "apiVersion": "[parameters('moodleCommon').computeApi]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('nicName'))]",
                "[variables('diskLoop')]"
            ],
            "location": "[resourceGroup().location]",
            "name": "[variables('vmName')]",
            "properties": {
                "availabilitySet": {
                    "id": "[variables( 'asRef')]"
                },
                "hardwareProfile": {
                    "vmSize": "[variables('postgresqlTshirt').vmSku]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[variables('nicRef')]"
                        }
                    ]
                },
                "osProfile": {
                    "adminPassword": "[parameters('moodleCommon').adminPassword]",
                    "adminUsername": "[parameters('moodleCommon').adminUsername]",
                    "computerName": "[variables('vmName')]"
                },
                "storageProfile": {
                    "dataDisks": [
                        {
                            "caching": "None",
                            "createOption": "Attach",
                            "lun": 0,
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks', concat(variables('vmName'),'-datadisk1'))]"
                            }
                        },
                        {
                            "caching": "None",
                            "createOption": "Attach",
                            "lun": 1,
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks', concat(variables('vmName'),'-datadisk2'))]"
                            }
                        }
                    ],
                    "imageReference": "[parameters('moodleCommon').osType]",
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        },
                        "name": "[variables('vmName')]"
                    }
                }
            },
            "tags": {
                "displayName": "postgresql Virtual Machine"
            },
            "type": "Microsoft.Compute/virtualMachines"
        },
        {
            "apiVersion": "2015-01-01",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/',variables('vmName'))]"
            ],
            "name": "[concat(variables('vmName'),'-ScriptProcessor')]",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "moodleCommon": {
                        "value": "[parameters('moodleCommon')]"
                    },
                    "vmName": {
                        "value": "[ variables('vmName')]"
                    },
                    "vmNameList": {
                        "value": "[parameters('vmNameList')]"
                    },
                    "vmNumber": {
                        "value": "[parameters('counter')]"
                    }
                },
                "templateLink": {
                    "uri": "[concat(    parameters('moodleCommon').baseTemplateUrl,'postgresqlvmconfig',parameters('moodleCommon').applyScriptsSwitch,'.json')]"
                }
            },
            "type": "Microsoft.Resources/deployments"
        },
        {
            "apiVersion": "2015-01-01",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/',variables('vmName'))]"
            ],
            "name": "[concat(variables('vmName'),'-Backup')]",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "moodleCommon": {
                        "value": "[parameters('moodleCommon')]"
                    },
                    "vmName": {
                        "value": "[variables('vmName')]"
                    }
                },
                "templateLink": {
                    "uri": "[concat(parameters('moodleCommon').baseTemplateUrl,'recoveryservicesEnlist',parameters('moodleCommon').azureBackupSwitch,'.json')]"
                }
            },
            "type": "Microsoft.Resources/deployments"
        }
    ],
    "variables": {
        "MariadbSizeLarge": {
            "diskCount": 2,
            "diskSize": "1023",
            "vmSku": "Standard_DS4_v2"
        },
        "MariadbSizeMedium": {
            "diskCount": 2,
            "diskSize": "512",
            "vmSku": "Standard_DS3_v2"
        },
        "MariadbSizeSmall": {
            "diskCount": 2,
            "diskSize": "256",
            "vmSku": "Standard_DS2_v2"
        },
        "MariadbTshirt": "[variables(concat('MariadbSize', parameters('moodleCommon').postgresqlTshirtSize))]",
        "PRID": "[concat(resourceId('Microsoft.Network/loadBalancers', parameters('moodleCommon').dbLoadBalancerName), '/probes/', parameters('moodleCommon').dbProbe)]",
        "asRef": "[resourceId('Microsoft.Compute/availabilitySets', parameters('moodleCommon').dbAvailabilitySetName)]",
        "beID": "[concat(resourceId('Microsoft.Network/loadBalancers', parameters('moodleCommon').dbLoadBalancerName), '/backendAddressPools/', parameters('moodleCommon').dbBeName)]",
        "diskLoop": "[concat(variables('vmName'),'-disk')]",
        "documentation01": "This sub-template create the nodes of the postgresql farm",
        "documentation02": "It expects certain values in the 'common' datastructure.",
        "documentation03": "    computeApi              - the 'managed' resources need to all use this value",
        "documentation04": "    dbAvailabilitySetName   - name of availability set for the db farm",
        "documentation05": "    vnetName                - name of virtual network",
        "documentation06": "    subnetDb                - name of subnet for postgresql",
        "documentation07": "    dbNameRoot              - nameroot for the postgresql nodes - combined with counter to get actual name of each node - disk and nic follow the naming scheme",
        "documentation08": "    postgresqlTshirtSize       - supports flexible sizing - translates to a CPU/MEM/DISK details",
        "documentation09": "    adminUsername           - OS accountusername",
        "documentation10": "    adminPassword           - OS account password",
        "documentation11": "    osType                  - an array of value that specifies the type of VM",
        "documentation15": "This sub-template calls other sub-templates",
        "documentation16": "    postgresqlvmconfig         - conditionally applies post-deployment script on the VM",
        "documentation17": "    recoveryservicesEnlist  - conditionally enlists the VM into the backup regimen",
        "feID": "[concat(resourceId('Microsoft.Network/loadBalancers',parameters('moodleCommon').dbLoadBalancerName),'/frontendIPConfigurations/', parameters('moodleCommon').dbFeName)]",
        "nicName": "[concat(variables('vmName'),'-nic')]",
        "nicRef": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]",
        "subnetDbRef": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('moodleCommon').vnetName), '/subnets/', parameters('moodleCommon').subnetDb)]",
        "vmName": "[concat(parameters('moodleCommon').dbNameRoot, parameters('counter'))]"
    }
}
