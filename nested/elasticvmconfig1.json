{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "moodleCommon": {
            "metadata": {
                "description": "Common Moodle values"
            },
            "type": "object"
        },
        "vmName": {
            "metadata": {
                "description": "Name of VM to process script - not actually used"
            },
            "type": "string"
        },
        "vmNumber": {
            "metadata": {
                "description": "Number of the VM in the pool"
            },
            "type": "int"
        }
    },
    "resources": [
        {
            "apiVersion": "2017-12-01",
            "location": "[resourceGroup().location]",
            "name": "[concat(parameters('vmName'),'/','install_elastic')]",
            "properties": {
                "publisher": "Microsoft.OSTCExtensions",
                "settings": {
                    "commandToExecute": "[variables('cmdExec')]",
                    "fileUris": [
                        "[variables('scriptUri')]"
                    ]
                },
                "type": "CustomScriptForLinux",
                "typeHandlerVersion": "1.3"
            },
            "tags": {
                "displayName": "ElasticVmExtension"
            },
            "type": "Microsoft.Compute/virtualMachines/extensions"
        }
    ],
    "variables": {
        "cmdExec": "[concat('bash ', parameters('moodleCommon').elasticScriptFilename, ' ', parameters('moodleCommon').elasticClusterName, ' ', concat(parameters('moodleCommon').elasticVmIPPrefix, '0'), ' ', concat(parameters('moodleCommon').elasticVmIPPrefix, '1'), ' ', concat(parameters('moodleCommon').elasticVmIPPrefix, '2'))]",
        "documentation01": "This sub-template applies a specific post-deployment script to the elastic search vms",
        "documentation02": "It expects certain values in the 'common' datastructure.",
        "documentation03": "    ScriptLocation        - partial web URI (equivalent to folder)",
        "documentation04": "    elasticScriptFilename - name of script file",
        "documentation06": "    elasticNameRoot       - nameroot of elastic farm - note that the code applies a vmNumber to get to the specific node",
        "scriptUri": "[concat(parameters('moodleCommon').ScriptLocation,parameters('moodleCommon').elasticScriptFilename)]"
    }
}
