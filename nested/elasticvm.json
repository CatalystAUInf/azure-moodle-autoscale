{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "counter": {
            "metadata": {
                "description": "from the copyindex function of calling template"
            },
            "type": "int"
        },
        "moodleCommon": {
            "metadata": {
                "description": "Common Moodle values"
            },
            "type": "object"
        }
    },
    "resources": [
        {
            "apiVersion": "2017-11-01",
            "location": "[resourceGroup().location]",
            "name": "[variables('nicName')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipcfg-elastic",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('subnetSanRef')]"
                            }
                        }
                    }
                ]
            },
            "tags": {
                "displayName": "Elastic VM NIC"
            },
            "type": "Microsoft.Network/networkInterfaces"
        },
        {
            "apiVersion": "[parameters('moodleCommon').computeApi]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('nicName'))]"
            ],
            "location": "[resourceGroup().location]",
            "name": "[variables('vmName')]",
            "properties": {
                "availabilitySet": {
                    "id": "[variables( 'asRef')]"
                },
                "hardwareProfile": {
                    "vmSize": "[variables('ElasticTshirt').vmSku]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[variables('nicRef')]"
                        }
                    ]
                },
                "osProfile": {
                    "adminPassword": "[parameters('moodleCommon').sshPassword]",
                    "adminUsername": "[parameters('moodleCommon').sshUsername]",
                    "computerName": "[variables('vmName')]"
                },
                "storageProfile": {
                    "dataDisks": [],
                    "imageReference": "[parameters('moodleCommon').osType]",
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        },
                        "name": "[variables('vmName')]"
                    }
                }
            },
            "tags": {
                "displayName": "Elastic Virtual Machine"
            },
            "type": "Microsoft.Compute/virtualMachines"
        },
        {
            "apiVersion": "2017-08-01",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/',variables('vmName'))]"
            ],
            "name": "[concat(variables('vmName'),'-ScriptProcessor')]",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "moodleCommon": {
                        "value": "[parameters('moodleCommon')]"
                    },
                    "vmName": {
                        "value": "[ variables('vmName')]"
                    },
                    "vmNumber": {
                        "value": "[parameters('counter')]"
                    }
                },
                "templateLink": {
                    "uri": "[concat(    parameters('moodleCommon').baseTemplateUrl,'elasticvmconfig',parameters('moodleCommon').applyScriptsSwitch,'.json')]"
                }
            },
            "type": "Microsoft.Resources/deployments"
        },
        {
            "apiVersion": "2017-08-01",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/',variables('vmName'))]"
            ],
            "name": "[concat(variables('vmName'),'-Backup')]",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "moodleCommon": {
                        "value": "[parameters('moodleCommon')]"
                    },
                    "vmName": {
                        "value": "[variables('vmName')]"
                    }
                },
                "templateLink": {
                    "uri": "[concat(    parameters('moodleCommon').baseTemplateUrl,'recoveryservicesEnlist',parameters('moodleCommon').azureBackupSwitch,'.json')]"
                }
            },
            "type": "Microsoft.Resources/deployments"
        }
    ],
    "variables": {
        "ElasticSizeLarge": {
            "vmSku": "Standard_DS4_v2"
        },
        "ElasticSizeMedium": {
            "vmSku": "Standard_DS3_v2"
        },
        "ElasticSizeSmall": {
            "vmSku": "Standard_DS2_v2"
        },
        "ElasticTshirt": "[variables(concat('ElasticSize', parameters('moodleCommon').elasticTshirtSize))]",
        "asRef": "[resourceId('Microsoft.Compute/availabilitySets',  parameters('moodleCommon').elasticAvailabilitySetName)]",
        "diskLoop": "[concat(variables('vmName'),'-disk')]",
        "documentation01": "This sub-template create the nodes of the elastic search cluster farm",
        "documentation02": "It expects certain values in the 'common' datastructure.",
        "documentation03": " computeApi                  - the 'managed' resources need to all use this value",
        "documentation04": " elasticAvailabilitySetName  - name of availability set for the elastic search cluster farm",
        "documentation05": " vnetName                    - name of virtual network",
        "documentation06": " subnetSan                   - name of subnet for elastic",
        "documentation07": " elasticNameRoot             - nameroot for the elastic nodes - combined with counter to get actual name of each node - disk and nic follow the naming scheme",
        "documentation08": " elasticTshirtSize           - supports flexible sizing - translates to a CPU/MEM/DISK details",
        "documentation09": " sshUsername                 - OS accountusername",
        "documentation10": " sshPassword                 - OS account password",
        "documentation11": " osType                      - an array of value that specifies the type of VM",
        "documentation15": "This sub-template calls other sub-templates",
        "documentation17": " elasticvmconfig             - conditionally applies post-deployment script on the VM",
        "documentation18": " recoveryservicesEnlist      - conditionally enlists the VM into the backup regimen",
        "nicName": "[concat(variables('vmName'),'-nic')]",
        "nicRef": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]",
        "subnetSanRef": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('moodleCommon').vnetName), '/subnets/',parameters('moodleCommon').subnetSan)]",
        "vmName": "[concat(parameters('moodleCommon').elasticNameRoot,parameters('counter'))]"
    },
    "outputs": {
        "elasticVmIP": {
            "value": "[reference(resourceId('Microsoft.Network/networkInterfaces',variables('nicName')), '2017-11-01').ipConfigurations[0].properties.privateIPAddress]",
            "type": "string"
        }
    }
}
